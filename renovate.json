{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],

  "ansible": {
    "fileMatch": [
      "\\.yml$"
    ]
  },

  "dependencyDashboard": true,
  "major": {
    "dependencyDashboardApproval": true
  },
  "dependencyDashboardAutoclose": true,

  "rebaseWhen": "conflicted",

  "timezone": "America/Los_Angeles",
  "schedule": [
    "at any time"
  ],

  "prHeader": "ansible-repo",

  "assignees": ["aedot"],

  "labels": ["dependencies"],

  "commitMessagePrefix": "{{depName}}:",
  "commitMessageAction": "Update",
  "commitMessageTopic": "dependency {{depName}}",
  "commitMessageExtra": "to {{#if isPinDigest}}{{{newDigestShort}}}{{else}}{{#if isMajor}}{{prettyNewMajor}}{{else}}{{#if isSingleVersion}}{{prettyNewVersion}}{{else}}{{#if newValue}}{{{newValue}}}{{else}}{{{newDigestShort}}}{{/if}}{{/if}}{{/if}}{{/if}}",


  "packageRules": [
    {
      "description": "Automatically merges minor and patch-level updates",
      "matchUpdateTypes": ["minor", "patch", "digest"],
      "automerge": true,
    },

    {
      "description": "Automatically creates a PR whenever there is a new major Renovate version",
      "matchUpdateTypes": ["major"],
      "automerge": false,
      "prCreation": "immediate"
    },

    {
      "matchPackagePatterns": ["docker"],
      "labels": ["docker"]
    }

    ],

  "prBodyTemplate": "{{{header}}}{{{table}}}{{{warnings}}}{{{notes}}}{{{changelogs}}}{{{configDescription}}}{{{controls}}}{{{footer}}}"

}
