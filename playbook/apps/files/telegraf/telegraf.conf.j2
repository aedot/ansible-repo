# Telegraf Configuration

# Global Agent Configuration
[agent]
  interval = "10s"  # How often to collect data
  round_interval = true
  metric_batch_size = 1000
  metric_buffer_limit = 10000
  collection_jitter = "0s"
  flush_interval = "10s"
  flush_jitter = "0s"
  precision = ""
  debug = false
  quiet = false
  logfile = ""
  hostname = ""
  omit_hostname = false

# Input Plugins
[[inputs.cpu]]
  percpu = true
  totalcpu = true
  collect_cpu_time = false
  report_active = false

[[inputs.disk]]
  ignore_fs = ["tmpfs", "devtmpfs"]
  devices = ["/"]
  
[[inputs.mem]]
  
[[inputs.system]]
  
[[inputs.swap]]

# Output Plugin (You can configure this based on your needs)
[[outputs.influxdb]]
  urls = ["http://localhost:8086"]
  database = "telegraf"
