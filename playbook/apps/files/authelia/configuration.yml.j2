---
###############################################################
#                   Authelia configuration                    #
###############################################################

theme: dark
jwt_secret: {{ jwt_secret }}
default_redirection_url: https://bing.com

default_2fa_method: "totp"

server:
  host: 0.0.0.0
  port: 9091
log:
  level: debug
  format: json
  file_path: /var/log/authelia/authelia.log
  keep_stdout: true


totp:
  issuer: {{ common_tld }}
  period: 30
  skew: 1

authentication_backend:
  password_reset:
    disable: false
  refresh_interval: 5m
  file:
    path: /config/users_database.yml
    watch: false
    search:
      email: false
      case_insensitive: false
    password:
      algorithm: argon2
      argon2:
        variant: argon2id
        iterations: 1
        salt_length: 16
        memory: 65536
        parallelism: 4
        key_length: 32
  
access_control:
  default_policy: deny
  rules:
    - domain: '*.{{ common_tld }}'
      policy: two_factor
    - domain: 'onboard.{{ common_tld }}'
      policy: bypass
    - domain: 'overseerr.{{ common_tld }}'
      policy: bypass
    - domain: 'auth.{{ common_tld }}'
      policy: bypass
    

session:
  name: authelia_session
  secret: {{ session_secret }}
  expiration: 3600
  inactivity: 300
  domain: {{ common_tld }}
  redis:
    host: redis
    port: 6379
    password: {{ redis_password }}
    database_index: 0
    maximum_active_connections: 10
    minimum_idle_connections: 0

regulation:
  max_retries: 3
  find_time: 120
  ban_time: 12h

storage:
  encryption_key: {{ storage_encryption_key }}
  mysql:
    host: mariadb
    port: 3306
    database: authelia
    username: authelia
    password: {{ mysql_password }}

notifier:
  disable_startup_check: true

smtp:
    username: {{ common_smtp_username }}
    password: {{ common_smtp_password }}
    host: {{ common_email_host }}
    port: {{ common_email_port }}
    sender: {{ application }}{{ common_email_to }}
    subject: "Authelia request {title}"
    startup_check_address: test{{ common_email_to }}
    disable_require_tls: {{ 'false' if common_email_protocol=='tls' else 'true' }}
    disable_html_emails: false
    tls:
      skip_verify: false
      minimum_version: TLS1.2

  # filesystem:
  #   filename: /config/notification.txt
...
