---
###############################################################################
#                           Authelia Configuration                            #
###############################################################################


server:
  host: 0.0.0.0
  port: 9091

theme: dark

jwt_secret: {{ jwt_secret }}

default_redirection_url: https://bing.com

totp:
  issuer: '{{ common_tld }}'
  period: 30
  skew: 1

authentication_backend:
  password_reset:
    disable: false
  refresh_interval: 5m
  ldap:
    implementation: custom
    url: ldap://{{ ldap_host }}:{{ ldap_port }}
    timeout: 5s
    start_tls: false
    base_dn: "{{ ldap_base_dn }}"
    username_attribute: uid
    additional_users_dn: ou=people
    users_filter: "(&({username_attribute}={input})(objectClass=person))"
    additional_groups_dn: ou=groups
    groups_filter: "(member={dn})"
    group_name_attribute: cn
    mail_attribute: mail
    display_name_attribute: displayName
    user: "uid={{ ldap_admin_user }},ou=people,{{ ldap_base_dn }}"
    password: "{{ ldap_admin_password }}"

access_control:
  default_policy: deny
  rules:
    ## bypass rule
    - domain: 
        - "auth.{{ common_tld }}"
      policy: bypass
    ## catch-all
    - domain:
        - "*.{{ common_tld }}"
      subject:
        - "group:humans"
      policy: one_factor
    

session:
  name: authelia_session
  secret: {{ session_secret }}
  domain: {{ common_tld }}"
  expiration: 1h
  inactivity: 5m
  remember_me_duration: 2M
  redis:
    host: "{{ host.redis_host }}"
    port: 6379
    password: "{{ host.redis_password }}"
  
regulation:
  max_retries: 3
  find_time: 120
  ban_time: 12h

storage:
  encryption_key: "{{ storage_encryption_key }}"
  postgres:
    host: "{{ host.postgres_host }}"
    port: "{{ host.postgres_port }}"
    database: "{{ application }}"
    username: "{{ application }}"
    password: "{{ db_password }}"

notifier:
  disable_startup_check: false
  smtp:
      username: "{{ common_smtp_username }}"
      password: "{{ common_smtp_password }}"
      host: "{{ common_email_host }}"
      port: "{{ common_email_port }}"
      sender: "notification{{ common_email_to }}"
      subject: Authelia request {title}
      disable_require_tls: {{ 'false' if common_email_protocol=='tls' else 'true' }}
      disable_html_emails: false
      tls:
        skip_verify: false
        minimum_version: TLS1.2

log:
  file_path: /var/log/authelia/authelia.log
  level: info
...